<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaContactos">

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="AtrÃ¡s" />

    <SearchView
        android:id="@+id/txtBuscar"
        android:layout_width="match_parent"
        android:background="@drawable/text_file_redondeado"
        android:layout_height="wrap_content"
        android:queryHint="Buscar contacto" />


    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:layout_marginBottom="10dp">

        <ListView
            android:id="@+id/listaContactos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="8dp">


        <LinearLayout
            android:id="@+id/columnaIzquierda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCompartir"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Compartir contacto"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="150dp"
                android:textSize="10dp"
                android:layout_height="wrap_content"
                android:text="Eliminar Contacto"
                android:layout_margin="4dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/columnaDerecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnVerImg"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Ver imagen"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="150dp"
                android:textSize="10dp"
                android:layout_height="wrap_content"
                android:text="Actualizar Contacto"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>